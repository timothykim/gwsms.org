
<% if flash[:notice] %><div id="login_notice" class="notice"><%= flash[:notice] %></div><% flash[:notice] = nil %><% end %>

<div id="login_form_page">
	<p>The page that you are trying to access requires an account. Please login to continue.</p>

	<div class="form_box">
		<% form_tag "/account/login" do -%>
		<p><label for="login">Email: </label><br /><%= text_field_tag 'login', nil, :class => 'text' %></p>

		<p><label for="password">Password: </label><br /><%= password_field_tag 'password', nil, :class => 'text' %></p>

		<p><%= check_box_tag 'remember_me' %> <label for="remember_me">Remember me</label></p>

		<p><%= submit_tag 'Log in', :class => 'submit' %></p>
	
		<% end -%>
	</div>

</div>

	<div id="login_text">
		<p>Are you a parent but don't have an account?<br/> Then <a href="/account/signup">sign up</a> for one!</p>
		
		<p><a href="/account/forgot">Did you forget your password?</a></p>
	</div>



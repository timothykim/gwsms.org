<h2>Sign up!</h2>

<p>If you are a studio member, please sign up.</p>



<div class="form_box">
	<%= error_messages_for :user %>
<% form_for :user do |f| -%>
	<p><label for="firstname">First Name</label><br/>
	<%= f.text_field :firstname, :class => "text" %></p>

	<p><label for="lastname">Last Name</label><br/>
	<%= f.text_field :lastname, :class => "text" %></p>

	<p><label for="email">Email</label><br/>
	<%= f.text_field :email, :class => "text" %></p>

	<p><label for="email_confimation">Email Confimation</label><br/>
	<%= f.text_field :email_confirmation, :class => "text" %></p>

	<p><label for="password">Password</label><br/>
	<%= f.password_field :password, :class => "text" %></p>

	<p><label for="password_confirmation">Confirm Password</label><br/>
	<%= f.password_field :password_confirmation, :class => "text" %></p>

	<p><%= submit_tag 'Sign up' %></p>
<% end -%>
</div>
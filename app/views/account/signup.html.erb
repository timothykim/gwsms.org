
<div id="signup_box">
	<% if error_messages_for(:user) != '' %><div id="signup_notice" class="notice" style="padding: 5px 10px;"><%= error_messages_for :user, :message => nil %></div><% end %>


	<div class="form_box">
	<% form_for :user do |f| -%>
		<div class="form_element">
			<div class="check"><label for="user_firstname">First Name</label></div>
			<%= f.text_field :firstname, :class => "text" %>
		</div>

		<div class="form_element">
			<div class="check"><label for="user_lastname">Last Name</label></div>
			<%= f.text_field :lastname, :class => "text" %>
		</div>

		<div class="form_element">
			<div class="check"><label for="user_email">Email</label></div>
			<%= f.text_field :email, :class => "text" %>
		</div>

		<div class="form_element">
			<div class="check"><label for="user_email_confimation">Email Confirmation</label></div>
			<%= f.text_field :email_confirmation, :class => "text" %>
		</div>

		<div class="form_element">
			<div class="check"><label for="user_password">Password <small>(at least 5 characters long)</small></label></div>
			<%= f.password_field :password, :class => "text" %>
		</div>

		<div class="form_element">
			<div class="check"><label for="user_password_confirmation">Confirm Password</label></div>
			<%= f.password_field :password_confirmation, :class => "text" %>
		</div>

		<div class="form_element">
      <div class="check"><label>Please solve the following simple math. <small>So we can prevent spam!</small></label></div>
      <%=@question%> = <input type="text" name="stupid_captcha" class="text" style="width: 140px;" />
		</div>


		<div class="form_element"><%= submit_tag 'Sign up', :disabled => "disabled", :class => "submit", :id => "form_submit" %></div>
	<% end -%>
	</div>
</div>



<div id="signup_box">
	<p>If you are a studio member, please sign up.</p>

	<div class="form_box">
		<%= error_messages_for :user %>
	<% form_for :user do |f| -%>
		<p class="check"><label for="user_firstname">First Name</label><br/>
		<%= f.text_field :firstname, :class => "text" %></p>

		<p class="check"><label for="user_lastname">Last Name</label><br/>
		<%= f.text_field :lastname, :class => "text" %></p>

		<p class="check"><label for="user_email">Email</label><br/>
		<%= f.text_field :email, :class => "text" %></p>

		<p class="check"><label for="user_email_confimation">Email Confimation</label><br/>
		<%= f.text_field :email_confirmation, :class => "text" %></p>

		<p class="check"><label for="user_password">Password <small>(at least 5 characters long)</small></label><br/>
		<%= f.password_field :password, :class => "text" %></p>

		<p class="check"><label for="user_password_confirmation">Confirm Password</label><br/>
		<%= f.password_field :password_confirmation, :class => "text" %></p>

		<p><%= submit_tag 'Sign up', :disabled => "disabled", :class => "submit", :id => "form_submit" %></p>
	<% end -%>
	</div>
</div>
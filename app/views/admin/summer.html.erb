<h3>Student Schedules</h3>

<ul>
<% for student in @students %>
	<li><%= student.name %> : <%= link_to "edit", :action => "summer_add", :id => student.id %> | <%= link_to "delete", { :action => "summer_delete", :id => student.id }, :confirm => "Are you sure you want to delete this schedule?" %></li>
<% end %>
</ul>


<div>
	<p><button class="iconbutton" onclick="window.location = '/admin/summer_add'"><img src="/images/icons/add.png" class="icon" /> Add a New Student Schedule</button> <button class="iconbutton" onclick="window.location = '/admin/summer_schedule'"><img src="/images/icons/calendar.png" class="icon" /> View/Edit Summer Calendar</button></p>
</div>

<h1>New User</h1>

<div class="form_box">
	<%= error_messages_for :user %>

<% form_for @user, :url => { :controller => "/admin/users", :action => "create" } do |f| %>
	<p><%= label(:user, :firstname, "First Name") %><br/>
	<%= f.text_field :firstname, :class => "text" %></p>

	<p><%= label(:user, :lastname, "Last Name") %><br/>
	<%= f.text_field :lastname, :class => "text" %></p>

	<p><%= label(:user, :email, "Email") %><br/>
	<%= f.text_field :email, :class => "text" %></p>

	<p><%= label(:user, :email_confirmation, "Email Confirmation") %><br/>
	<%= f.text_field :email_confirmation, :class => "text" %></p>

	<p><%= label(:user, :password, "Password") %><br/>
	<%= f.password_field :password, :class => "text" %></p>

	<p><%= label(:user, :password_confirmation, "Password Confirmation") %><br/>
	<%= f.password_field :password_confirmation, :class => "text" %></p>

	<p><%= f.check_box :is_admin %> <%= label(:user, :is_admin, "Admin") %></p>

	<p><%= f.check_box :activated, :checked => true%> <%= label(:user, :activated, "Activate") %></p>

    <p><%= f.submit "Create" %> <%= check_box_tag 'add_more' %> <%= label(:add, :more, "Add More Users") %></p>
<% end %>
</div>



<p><%= link_to 'Back to the list', users_path %></p>
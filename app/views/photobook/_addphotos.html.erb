<%= stylesheet_link_tag "photouploader" %>

<script type="text/javascript" src="/swfupload/swfupload.js"></script>
<script type="text/javascript" src="/javascripts/photobook/fileprogress.js"></script>
<script type="text/javascript" src="/javascripts/photobook/uploadhandlers.js"></script>
<script type="text/javascript">
	var swfu;
	
	var album_id = <%= @album.id %>;

	window.onload = function() {
		var settings = {
			flash_url : "/swfupload/swfupload_f9.swf",
			upload_url: "/photobook/processuploads/<%= @album.id %>?swfupload_sid=<%= session.session_id %>",

			
			file_size_limit : "10 MB",
			file_types : "*.jpg;*.png;*.gif; *.jpeg",
			file_types_description: "Please Select Photos to Add",
			
			
			file_types_description : "Picture Files",
			file_upload_limit : 100,
			file_queue_limit : 0,
			custom_settings : {
				progressTarget : "fsUploadProgress",
				cancelButtonId : "btnCancel"
			},
			debug: true,

			// The event handler functions are defined in handlers.js
			file_queued_handler : fileQueued,
			file_queue_error_handler : fileQueueError,
			file_dialog_complete_handler : fileDialogComplete,
			upload_start_handler : uploadStart,
			upload_progress_handler : uploadProgress,
			upload_error_handler : uploadError,
			upload_success_handler : uploadSuccess,
			upload_complete_handler : uploadComplete,
			queue_complete_handler : queueComplete	// Queue plugin event

		};

		swfu = new SWFUpload(settings);
     };
</script>
